.offline {
  height:100%;
  width: 750rpx;/* iphone*/
  background:white;
  text-align: center;
  line-height: 1200rpx;
}

/* 类型  */
.type-container {
  display:flex;
  padding: 5rpx 20rpx 0 20rpx;
  position: relative;
  top: -93rpx;
  background:rgba(0, 0, 0, 0.137);
  margin-top: 15rpx;
  justify-content: flex-start;
}
.type-container .type-item {
  flex: 1;
  height: 60rpx;
}
.type-container .type-item view{
  font-size:25rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius:10rpx 10rpx 0 0;
  margin:0 3rpx;
  background-color: rgb(253, 173, 193);
  color: rgba(255, 255, 255);
}
.type-container .type-item .type-item-on {
  background-color: rgb(248, 71, 115);
  box-shadow: 3rpx grey;
}

/*列表*/
.fruit-container {
  display:flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 710rpx;
  margin:20rpx;
  border-radius: 10rpx 10rpx 0 0;
  position:relative;
  top: -73rpx;
}
.fruit-item {
  width: 345rpx;
  overflow: hidden;
  border-radius: 15rpx;
  margin-bottom:20rpx;
  background-color:white;
  box-shadow: 3.5rpx 3.5rpx 1rpx #d3d1d1;
}
.fruit-item .fruit-image {
  height: 320rpx;
  width: 345rpx; 
  border: 1rpx;
}
.fruit-item .fruit-image image {
  width: 100%;
  height:100%;
}
.fruit-item .fruit-info {
  margin: 15rpx 0 10rpx 10rpx;
}
.fruit-item .fruit-info .name {
  font-size:35rpx;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.fruit-item .fruit-info .line2 {display: flex;margin-top: 10rpx;justify-content: space-between;padding-right: 20rpx;align-items: center}
.fruit-item .fruit-info .line2 image {width: 80rpx;height: 70rpx;position: relative;top: -8rpx;left: 12rpx}
.fruit-item .fruit-info .price {width: 200rpx;font-size:35rpx;color:#EE6A50}
.fruit-item .fruit-info .price .unit {font-size:20rpx;}
.fruit-item .fruit-info image {width: 50rpx;height: 50rpx;}

/**index.wxss**/
page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
}
.nav {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #f7f7f7;
  font-size: 16px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}
.nav-item {
  width: 20%;
  display: inline-block;
  text-align: center;
}
.nav-item.active{
  color: red;
}
.tab-box{
  background: greenyellow;
  padding-top: 80rpx;
  height: 100%;
  box-sizing: border-box;
}
.tab-content{
  overflow-y: scroll;
}