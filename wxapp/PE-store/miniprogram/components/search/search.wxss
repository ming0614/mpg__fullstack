/* miniprogram/pages/homepage/homepage.wxss */
.fruit-container {
  display:flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 710rpx;
  margin:20rpx;
  border-radius: 10rpx 10rpx 0 0;
  position:relative;
  top: 0;
}
.fruit-item {
  width: 345rpx;
  overflow: hidden;
  border-radius: 15rpx;
  margin-bottom:20rpx;
  background-color:white;
  box-shadow: 3.5rpx 3.5rpx 1rpx #d3d1d1;
}
.fruit-item .fruit-image {
  height: 320rpx;
  width: 345rpx; 
  border: 1rpx;
}
.fruit-item .fruit-image image {
  width: 100%;
  height:100%;
}
.fruit-item .fruit-info {
  margin: 15rpx 0 10rpx 10rpx;
}
.fruit-item .fruit-info .name {
  font-size:35rpx;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.fruit-item .fruit-info .line2 {display: flex;margin-top: 10rpx;justify-content: space-between;padding-right: 20rpx;align-items: center}
.fruit-item .fruit-info .line2 image {width: 80rpx;height: 70rpx;position: relative;top: -8rpx;left: 12rpx}
.fruit-item .fruit-info .price {width: 200rpx;font-size:35rpx;color:#EE6A50}
.fruit-item .fruit-info .price .unit {font-size:20rpx;}
.fruit-item .fruit-info image {width: 50rpx;height: 50rpx;}


